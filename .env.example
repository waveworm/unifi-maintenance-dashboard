# UniFi Controller Configuration
UNIFI_BASE_URL=https://192.168.1.10:8443
UNIFI_USERNAME=admin
UNIFI_PASSWORD=your_password_here
UNIFI_SITE=default
UNIFI_VERIFY_SSL=false

# Application Configuration
# Bind to 127.0.0.1 for Tailscale-only access (recommended)
# Use 0.0.0.0 to allow direct LAN access (less secure)
APP_HOST=127.0.0.1
APP_PORT=8000
APP_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Development Mode
DEVELOPMENT_MODE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/unifi_dashboard.log

# Timezone
TZ=America/New_York
APP_TIMEZONE=America/New_York

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/unifi_dashboard.db

# Scheduler Configuration
SCHEDULER_ENABLED=true

# Device Polling
DEVICE_POLL_INTERVAL=30
DEVICE_ONLINE_TIMEOUT=300
DEVICE_REBOOT_DELAY=300

# PoE Power Cycle
POE_POWER_OFF_DURATION=15
